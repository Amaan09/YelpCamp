<% include ../partials/header %>

<div class = "container text-center">
    <h1>Create a new Campground</h1>
    
    <form action = "/campgrounds" method = "POST" style = "width: 30%;margin: 25px auto">
        <div class = "form-group">
            <input type = "text" class = "form-control" placeholder = "Name" name = "name">    
        </div>
        <div class = "form-group">
            <input type = "number" class = "form-control" placeholder = "price" name = "price" min = "0.01" step = "0.01">    
        </div>
        <div class = "form-group">
            <input type = "text" class = "form-control" placeholder = "Image Url" name = "image">    
        </div>
        <div class = "form-group">
            <input type = "text" class = "form-control" placeholder = "Description" name = "description">    
        </div>
        <div class = "form-group">
            <input type = "submit" class = "form-control btn btn-primary">    
        </div>
    </form>    
    
    <a href = "/campgrounds" class = "btn btn-danger">Go Back</a>
</div>
    

<% include ../partials/footer %>