<% include ../partials/header %>

<div class = "container text-center">
    <h1>Edit Comment</h1>
    
    <form action = "/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method = "POST" style = "width: 30%;margin: 25px auto">
        <div class = "form-group">
            <input type = "text" class = "form-control" value="<%= comment.text %>" name = "comment[text]">    
        </div>
        <div class = "form-group">
            <input type = "submit" class = "form-control btn btn-primary">    
        </div>
    </form>    
    
    <a href = "/campgrounds/<%= campground_id %>" class = "btn btn-danger">Go Back</a>
</div>
    

<% include ../partials/footer %>