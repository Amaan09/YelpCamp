<% include ../partials/header %>

<div class = "container text-center">
    <h1>Add a Comment to <%= campground.name %></h1>
    
    <form action = "/campgrounds/<%= campground._id %>/comments" method = "POST" style = "width: 30%;margin: 25px auto">
        <div class = "form-group">
            <input type = "text" class = "form-control" placeholder = "text" name = "comment[text]">    
        </div>
        <div class = "form-group">
            <input type = "submit" class = "form-control btn btn-primary">    
        </div>
    </form>    
    
    <a href = "/campgrounds/<%= campground._id %>" class = "btn btn-danger">Go Back</a>
</div>
    

<% include ../partials/footer %>